<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zhangchuangla.system.mapper.SysDictValueMapper">

    <resultMap id="BaseResultMap" type="cn.zhangchuangla.system.model.entity.SysDictValue">
        <id property="id" column="id"/>
        <result property="dictKey" column="dict_key"/>
        <result property="label" column="label"/>
        <result property="value" column="value"/>
        <result property="sort" column="sort"/>
        <result property="tag" column="tag"/>
        <result property="status" column="status"/>
        <result property="createBy" column="create_by"/>
        <result property="updateBy" column="update_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <select id="listDictValue" resultMap="BaseResultMap">
        SELECT
        id, dict_key, label, value, tag, sort, status, create_time, update_time, create_by, update_by, remark
        FROM sys_dict_value
        <where>
            <if test="request.label != null and request.label != ''">
                AND label LIKE CONCAT('%', #{request.label}, '%')
            </if>
            <if test="request.value != null and request.value != ''">
                AND `value` LIKE CONCAT('%', #{request.value}, '%')
            </if>
            <if test="request.status != null">
                AND status = #{request.status}
            </if>
            and dict_key = #{dictKey}
        </where>
        ORDER BY sort ASC, create_time DESC
    </select>
</mapper>
