<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zhangchuangla.system.mapper.SysMenuMapper">


    <resultMap id="BaseResultMap" type="cn.zhangchuangla.system.model.entity.SysMenu">
        <id property="id" column="id"/>
        <result property="parentId" column="parent_id"/>
        <result property="treePath" column="tree_path"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="routeName" column="route_name"/>
        <result property="routePath" column="route_path"/>
        <result property="component" column="component"/>
        <result property="permission" column="permission"/>
        <result property="alwaysShow" column="always_show"/>
        <result property="keepAlive" column="keep_alive"/>
        <result property="visible" column="visible"/>
        <result property="sort" column="sort"/>
        <result property="icon" column="icon"/>
        <result property="redirect" column="redirect"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="params" column="params"/>
    </resultMap>


    <select id="getMenusByRoleCodes" resultMap="BaseResultMap">
        select id,
               parent_id,
               tree_path,
               name,
               type,
               route_name,
               route_path,
               component,
               permission,
               always_show,
               keep_alive,
               visible,
               sort,
               icon,
               redirect,
               create_time,
               update_time,
               params
        from sys_menu
    </select>
    <select id="getPermissionsByRoleName" resultMap="BaseResultMap">
        select *
        from sys_menu
                 join sys_role_menu on sys_menu.id = sys_role_menu.menu_id
        where sys_role_menu.role_id = (select role_id
                                       from sys_role
                                       where role_key = #{roleKey})
    </select>
</mapper>
