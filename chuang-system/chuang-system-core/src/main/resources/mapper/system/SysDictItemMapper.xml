<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zhangchuangla.system.mapper.SysDictItemMapper">

    <resultMap id="BaseResultMap" type="cn.zhangchuangla.system.model.entity.SysDictItem">
        <id property="id" column="id"/>
        <result property="dictType" column="dict_type"/>
        <result property="itemLabel" column="item_label"/>
        <result property="itemValue" column="item_value"/>
        <result property="sort" column="sort"/>
        <result property="tag" column="tag"/>
        <result property="status" column="status"/>
        <result property="createBy" column="create_by"/>
        <result property="updateBy" column="update_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <select id="listDictItem" resultMap="BaseResultMap">
        SELECT
        id, dict_type, item_label, item_value, tag, sort, status, create_time, update_time, create_by, update_by, remark
        FROM sys_dict_item
        <where>
            <if test="request.itemLabel != null and request.itemLabel != ''">
                AND item_label LIKE CONCAT('%', #{request.itemLabel}, '%')
            </if>
            <if test="request.itemValue != null and request.itemValue != ''">
                AND item_value LIKE CONCAT('%', #{request.itemValue}, '%')
            </if>
            <if test="request.status != null">
                AND status = #{request.status}
            </if>
            and dict_type = #{dictType}
        </where>
        ORDER BY sort ASC, create_time DESC
    </select>
</mapper>
