<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zhangchuangla.system.mapper.SysDictItemMapper">

    <resultMap id="BaseResultMap" type="cn.zhangchuangla.system.model.entity.SysDictItem">
        <id property="id" column="id"/>
        <result property="dictType" column="dict_type"/>
        <result property="itemLabel" column="item_label"/>
        <result property="itemValue" column="item_value"/>
        <result property="sortOrder" column="sort_order"/>
        <result property="status" column="status"/>
        <result property="remark" column="remark"/>
        <result property="createBy" column="create_by"/>
        <result property="updateBy" column="update_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="listDictItem" resultMap="BaseResultMap">
        SELECT
        id, dict_type, item_label, item_value, sort_order, status, remark,
        create_by, update_by, create_time, update_time
        FROM sys_dict_item
        <where>
            <if test="request.dictType != null and request.dictType != ''">
                AND dict_type = #{request.dictType}
            </if>
            <if test="request.itemLabel != null and request.itemLabel != ''">
                AND item_label LIKE CONCAT('%', #{request.itemLabel}, '%')
            </if>
            <if test="request.itemValue != null and request.itemValue != ''">
                AND item_value LIKE CONCAT('%', #{request.itemValue}, '%')
            </if>
            <if test="request.status != null">
                AND status = #{request.status}
            </if>
        </where>
        ORDER BY sort_order ASC, create_time DESC
    </select>
</mapper>
