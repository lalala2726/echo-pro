<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zhangchuangla.system.mapper.DictionaryItemMapper">

    <resultMap id="BaseResultMap" type="cn.zhangchuangla.system.model.entity.DictionaryData">
        <id property="id" column="id"/>
        <result property="dictionaryId" column="dictionary_id"/>
        <result property="itemKey" column="item_key"/>
        <result property="itemValue" column="item_value"/>
        <result property="sortOrder" column="sort_order"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="createBy" column="create_by"/>
        <result property="updateBy" column="update_by"/>
        <result property="remark" column="remark"/>
    </resultMap>
    <delete id="deleteDictionaryItem">
        delete from dictionary_data
        where id in
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    <select id="dictionaryItemList" resultMap="BaseResultMap">
        select *
        from dictionary_data
        <where>
            <if test="request.dictionaryId != null">
                AND dictionary_id = #{dictionaryId}
            </if>
            <if test="request.itemKey != null and request.itemKey != ''">
                AND item_key LIKE CONCAT('%', #{itemKey}, '%')
            </if>
            <if test="request.itemValue != null and request.itemValue != ''">
                AND item_value LIKE CONCAT('%', #{itemValue}, '%')
            </if>
            <if test="request.status != null">
                AND status = #{status}
            </if>
        </where>
    </select>
    <select id="dictionaryDataService" resultMap="BaseResultMap">
        select dictionary_data.dictionary_id,
               dictionary_data.item_key,
               dictionary_data.item_value,
               dictionary_data.create_by,
               dictionary_data.update_by,
               dictionary_data.remark
        from dictionary_data
                 join dictionary d on d.id = dictionary_data.dictionary_id
        where d.name = #{dictionaryName}
    </select>

</mapper>
